    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const tabs = document.querySelectorAll('.tab');
            const dashboards = document.querySelectorAll('.dashboard');
            const tratativaItems = document.querySelectorAll('.tratativa-item');
            const body = document.body;

            const tooltip = document.createElement('div');
            tooltip.classList.add('tooltip');
            body.appendChild(tooltip);

            const activateTab = (tabElement) => {
                tabs.forEach(tab => tab.classList.remove('active'));
                dashboards.forEach(dash => dash.classList.remove('active'));

                tabElement.classList.add('active');
                const targetId = tabElement.getAttribute('data-target');
                document.getElementById(targetId).classList.add('active');
            };

            tabs.forEach(tab => {
                tab.addEventListener('click', () => {
                    activateTab(tab);
                });
            });

            // Tooltip functionality
            tratativaItems.forEach(item => {
                item.addEventListener('mouseenter', (event) => {
                    const tooltipText = event.target.getAttribute('data-tooltip');
                    if (tooltipText) {
                        tooltip.textContent = tooltipText;
                        tooltip.classList.add('show');
                        updateTooltipPosition(event);
                    }
                });

                item.addEventListener('mouseleave', () => {
                    tooltip.classList.remove('show');
                });
            });

            const updateTooltipPosition = (event) => {
                const itemRect = event.target.getBoundingClientRect();
                const containerRect = document.querySelector('.container').getBoundingClientRect();
                
                // Position the tooltip above the element
                let top = itemRect.top - tooltip.offsetHeight - 15;
                let left = itemRect.left;

                // Ensure the tooltip is not off-screen
                if (top < containerRect.top) {
                    top = itemRect.bottom + 15;
                    tooltip.classList.remove('tooltip-top');
                    tooltip.classList.add('tooltip-bottom');
                } else {
                    tooltip.classList.remove('tooltip-bottom');
                    tooltip.classList.add('tooltip-top');
                }

                if (left + tooltip.offsetWidth > containerRect.right) {
                    left = containerRect.right - tooltip.offsetWidth;
                }
                if (left < containerRect.left) {
                    left = containerRect.left;
                }
                
                tooltip.style.top = `${top}px`;
                tooltip.style.left = `${left}px`;
            };
        });
    </script>
</body>

</html>
